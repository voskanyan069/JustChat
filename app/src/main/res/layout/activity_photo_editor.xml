<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.PhotoEditorActivity"
    android:orientation="vertical">

    <ja.burhanrashid52.photoeditor.PhotoEditorView
        android:id="@+id/photo_editor_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/photo_editor_menu"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/photo_editor_menu"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/photo_editor_menu"
        app:itemTextColor="@color/photo_editor_menu_color"
        app:itemIconTint="@color/photo_editor_menu_color"
        app:labelVisibilityMode="labeled"
        android:background="#242627" />
</RelativeLayout>