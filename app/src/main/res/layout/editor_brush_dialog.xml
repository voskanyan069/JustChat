<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/Theme.JustChat.BottomSheetModal.TextView"
        android:text="@string/brush_size" />

    <SeekBar
        android:id="@+id/brush_size_bar"
        android:progress="10"
        style="@style/Theme.JustChat.BottomSheetModal.Seekbar" />

    <TextView
        style="@style/Theme.JustChat.BottomSheetModal.TextView"
        android:text="@string/brush_color" />

    <am.justchat.views.EditorColorPicker
        android:id="@+id/brush_color_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>