<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JustChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightGreen</item>
        <item name="colorPrimaryVariant">@color/lightGreen</item>
        <item name="colorOnPrimary">@color/lightYellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/accent2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JustChat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JustChat.TextView.PageTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40sp</item>
        <item name="fontFamily">@font/firasans_medium</item>
        <item name="android:paddingTop">20sp</item>
        <item name="android:paddingStart">40sp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Theme.JustChat.TextView.SubTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">15sp</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/firasans_medium</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Theme.JustChat.EditText.SearchBar" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:layout_marginEnd">10sp</item>
        <item name="android:paddingTop">15sp</item>
        <item name="android:paddingBottom">15sp</item>
        <item name="android:paddingStart">15sp</item>
        <item name="android:paddingEnd">15sp</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="drawableTint">@color/lightGrey</item>
        <item name="android:drawablePadding">10sp</item>
        <item name="android:background">@drawable/search_bar_layout</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:hint">@string/search</item>
        <item name="fontFamily">@font/firasans_medium</item>
    </style>

    <style name="Theme.JustChat.TextView.ProfileUsername" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/firasans_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.JustChat.TextView.Message" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/firasans_medium</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Theme.JustChat.Switch" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="thumbTint">@color/lightGreen</item>
        <item name="trackTint">@color/middleGrey</item>
        <item name="useMaterialThemeColors">true</item>
    </style>

    <style name="Theme.JustChat.ImageView.ListItem" parent="ThemeOverlay.MaterialComponents">
        <item name="android:layout_width">20sp</item>
        <item name="android:layout_height">20sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">10sp</item>
    </style>

    <style name="Theme.JustChat.ImageView.Authentication.Background" parent="ThemeOverlay.MaterialComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="Theme.JustChat.EditText.Authentication" parent="ThemeOverlay.MaterialComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginLeft">30sp</item>
        <item name="android:layout_marginRight">30sp</item>
        <item name="android:paddingLeft">20sp</item>
        <item name="android:paddingRight">20sp</item>
        <item name="android:background">@drawable/auth_input_layout</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/firasans_medium</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Theme.JustChat.Button.Authentication" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">50sp</item>
        <item name="android:paddingRight">50sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/firasans_medium</item>
        <item name="android:background">@drawable/auth_button_layout</item>
    </style>

    <style name="Theme.JustChat.TextView.Authentication" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:textAlignment">center</item>
        <item name="color">@color/grey</item>
    </style>

    <style name="Theme.JustChat.TextView.ErrorMessage" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/firasans_medium</item>
        <item name="android:textColor">@color/error</item>
    </style>
    
    <style name="Theme.JustChat.Chat.AppBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/lightGreen</item>
        <item name="subtitleTextColor">@color/appBarSubtitle</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIcon">@drawable/ic_arrow_left</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="iconTint">@color/white</item>
        <item name="menu">@menu/chat_app_bar_menu</item>
    </style>

    <style name="Theme.JustChat.Chat.EditText.Message" parent="ThemeOverlay.MaterialComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:background">@drawable/message_input_layout</item>
        <item name="android:fontFamily">@font/firasans_medium</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:hint">@string/message</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="Theme.JustChat.Chat.ImageView.MessageActions" parent="ThemeOverlay.MaterialComponents">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="tint">@color/grey</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="Theme.JustChat.Chat.TextView.Message.Sender" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.JustChat.Chat.Message.Card" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Theme.JustChat.Chat.TextView.Message.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:maxWidth">260dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.JustChat.Chat.TextView.Message.Time" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">10:00</item>
    </style>

    <style name="Theme.JustChat.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextColor">@color/lightGreen</item>
        <item name="itemBackground">@color/white</item>
        <item name="itemIconTint">@color/lightGreen</item>
    </style>

    <style name="Theme.JustChat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.JustChat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>